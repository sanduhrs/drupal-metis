 * $variables['element']['#server']: The metis server,
 * $variables['element']['#show']: The field setting to show (1) or not (0) the code,
 */
function theme_metis_show($variables) {
  $element = $variables['element'];
  if (empty($element)) {
    return '';
  }
  switch ($element['#show']) {
    case '0':
      return t('no');
      break;
    case '1':
      return t('yes');
      break;
  }
}